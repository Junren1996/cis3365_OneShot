<AnchorPane styleClass="login-bg" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LoginController">
   <children>
       <AnchorPane styleClass="login-card" AnchorPane.leftAnchor="400" AnchorPane.topAnchor="120">
          <children>
              <Label styleClass="login-title" text="Manager Login" AnchorPane.leftAnchor="160" AnchorPane.topAnchor="25" />
              <Label styleClass="font-gray" text="Sakura Management System" AnchorPane.leftAnchor="190" AnchorPane.topAnchor="65" />
              <VBox prefWidth="330" spacing="20" AnchorPane.leftAnchor="100" AnchorPane.topAnchor="90">
                 <children>
                     <TextField fx:id="accountField" focusTraversable="false" promptText="User" />
                     <PasswordField fx:id="passwordField" focusTraversable="false" promptText="Password" />
                     <HBox spacing="20">
                        <children>
                            <TextField focusTraversable="false" prefWidth="180" promptText="code" />
                            <ImageView fitHeight="30" fitWidth="80">
                               <image>
                                   <Image url="http://pj7ldvis7.bkt.clouddn.com/18-12-6/30718755.jpg" />
                               </image>
                            </ImageView>
                        </children>
                     </HBox>
                     <AnchorPane>
                        <children>
                            <CheckBox text="Remember Password" AnchorPane.leftAnchor="0" />
                            <Label styleClass="font-green" AnchorPane.rightAnchor="0" />
                        </children>
                     </AnchorPane>
                     <Button onAction="#login" styleClass="login-btn" text="Login" />
                     <HBox alignment="BOTTOM_LEFT" spacing="12">
                        <children>
                            <Label styleClass="font-gray" text="社交账号注册" />
                            <ImageView>
                               <image>
                                   <Image url="http://pj7ldvis7.bkt.clouddn.com/18-12-6/77612632.jpg" />
                               </image>
                            </ImageView>
                            <ImageView>
                               <image>
                                   <Image url="http://pj7ldvis7.bkt.clouddn.com/18-12-6/86881620.jpg" />
                               </image>
                            </ImageView>
            
                            <ImageView>
               <image>
                                   <Image url="http://pj7ldvis7.bkt.clouddn.com/18-12-6/70944754.jpg" />
               </image>
                            </ImageView>
                            <Label styleClass="font-green" text="注册账号" />
                        </children>
                     </HBox>
                 </children>
                  <padding>
                      <Insets bottom="20" left="20" right="20" top="20" />
                  </padding>
              </VBox>
          </children>
       </AnchorPane>
   </children>
</AnchorPane>
